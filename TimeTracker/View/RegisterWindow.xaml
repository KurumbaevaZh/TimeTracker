<Window x:Class="TimeTracker.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker.View"
        mc:Ignorable="d"
        Title="Регистрация" Height="600" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock Text="Регистрация нового сотрудника" FontSize="16"  Margin="0,0,0,20"/>

            <TextBlock Text="Имя"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Email"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Должность"/>
            <TextBox Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Отдел"/>
            <ComboBox ItemsSource="{Binding Departments}" 
                      SelectedItem="{Binding SelectedDepartment}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordBox" 
                         PasswordChanged="PasswordBox_PasswordChanged"
                         Margin="0,0,0,10"/>

            <TextBlock Text="Подтверждение пароля"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                         PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                         Margin="0,0,0,15"/>

            <TextBlock Text="{Binding ErrorMessage}" 
                      Foreground="Red" 
                      Margin="0,0,0,10"/>

            <TextBlock Text="{Binding SuccessMessage}" 
                      Foreground="Green" 
                      Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Зарегистрировать" 
                        Command="{Binding RegisterCommand}"
                        Width="120" Height="30"/>
                <Button Content="Отмена" 
                        Command="{Binding CancelCommand}"
                        Width="80" Height="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
