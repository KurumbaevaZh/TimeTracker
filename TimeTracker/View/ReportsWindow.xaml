<Window x:Class="TimeTracker.View.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker.View"
        mc:Ignorable="d"
        Title="ReportsWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="ОТЧЕТЫ" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" 
                CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="С:" VerticalAlignment="Center" Margin="5"/>
                <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate}" Margin="5" Width="100"/>

                <TextBlock Grid.Column="2" Text="По:" VerticalAlignment="Center" Margin="10,5,5,5"/>
                <DatePicker Grid.Column="3" SelectedDate="{Binding EndDate}" Margin="5" Width="100"/>
            </Grid>
        </Border>

        <TextBox Grid.Row="2" 
                 Text="{Binding ReportText}" 
                 IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontFamily="Courier New"
                 FontSize="12"
                 Margin="0,0,0,10"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center">

            <Button Content="Создать отчет" 
                    Command="{Binding GenerateReportCommand}"
                    Width="167" Height="30" Margin="5"/>

            <Button Content="Сохранить в файл" 
                    Command="{Binding ExportToFileCommand}"
                    Width="158" Height="30" Margin="5"/>

            <TextBlock Text="{Binding TotalTimeText}" 
                      FontWeight="Bold" FontSize="14"
                      VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
