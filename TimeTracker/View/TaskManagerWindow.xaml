<Window x:Class="TimeTracker.View.TaskManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker.View"
        mc:Ignorable="d"
        Title="Задачи" Height="700" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="УПРАВЛЕНИЕ ЗАДАЧАМИ" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть - список задач -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Фильтры -->
                <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" 
                        CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Фильтры:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="200" Margin="0,0,10,0" Padding="5"/>

                            <ComboBox ItemsSource="{Binding Projects}" 
                                      SelectedItem="{Binding SelectedProjectFilter}"
                                      DisplayMemberPath="Name"
                                      Width="150" Margin="0,0,10,0"/>

                            <ComboBox ItemsSource="{Binding StatusFilters}" 
                                      SelectedItem="{Binding SelectedStatusFilter}"
                                      Width="120"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Список задач -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding FilteredTasks}"
                          SelectedItem="{Binding SelectedTask}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="200"/>
                        <DataGridTextColumn Header="Проект" Binding="{Binding ProjectId}" Width="100"/>
                        <DataGridTextColumn Header="Исполнитель" Binding="{Binding AssignedTo}" Width="100"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Правая часть - создание/редактирование задачи -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" 
                    CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="Создание новой задачи" 
                               FontSize="16" FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <!-- Форма -->
                    <TextBlock Text="Название задачи*" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,10" Padding="5"/>

                    <TextBlock Text="Описание" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,10" Padding="5" Height="60"
                             TextWrapping="Wrap" AcceptsReturn="True"/>

                    <TextBlock Text="Проект*" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Projects}" 
                              SelectedItem="{Binding SelectedProjectForNewTask}"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Исполнитель*" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Employees}" 
                              SelectedItem="{Binding SelectedEmployeeForNewTask}"
                              DisplayMemberPath="FirstName"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Статус*" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding StatusesForNewTask}" 
                              SelectedItem="{Binding SelectedStatusForNewTask}"
                              Margin="0,0,0,20"/>

                    <!-- Кнопки формы -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Создать задачу" 
                                Command="{Binding CreateTaskCommand}"
                                Width="120" Height="30" Margin="5"/>

                        <Button Content="Очистить форму" 
                                Command="{Binding ClearFormCommand}"
                                Width="100" Height="30" Margin="5"/>
                    </StackPanel>

                    <Separator Margin="0,20,0,10"/>

                    <TextBlock Text="Управление выбранной задачей" 
                               FontWeight="Bold" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Редактировать" 
                                Command="{Binding EditTaskCommand}"
                                Width="100" Height="30" Margin="5"/>

                        <Button Content="Удалить" 
                                Command="{Binding DeleteTaskCommand}"
                                Width="80" Height="30" Margin="5"/>

                        <Button Content="Сменить статус" 
                                Command="{Binding ChangeStatusCommand}"
                                Width="110" Height="30" Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Нижняя панель -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Обновить данные" 
                    Command="{Binding LoadDataCommand}"
                    Width="120" Height="30" Margin="5"/>

            <Button Content="Назад" 
                    Click="BackButton_Click"
                    Width="80" Height="30" Margin="5"/>

            <TextBlock Text="{Binding FilteredTasks.Count, StringFormat=Найдено задач: {0}}" 
                      VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
