<Window x:Class="TimeTracker.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="400" Width="400">
    
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="114,51,0,0" Text="Email" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="114,93,0,0" TextWrapping="Wrap" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="154" Height="28"/>
        <TextBlock HorizontalAlignment="Left" Margin="114,151,0,0" Text="Пароль" VerticalAlignment="Top" Height="26" Width="144"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="114,182,0,0" VerticalAlignment="Top" Width="154" Height="32" PasswordChanged="PasswordBox_PasswordChanged"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="125,249,0,0" VerticalAlignment="Top" Width="94" Height="32" Command="{Binding LoginCommand}"/>
    </Grid>
</Window>
